<Window x:Class="DemoProb.PagesAndWidnows.PageEditAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoProb.PagesAndWidnows"
        mc:Ignorable="d"
        Title="Окно редактирования/добавления" Height="700" Width="300" Background="#FF67B980">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Наименование" FontSize="14" Margin="10,10,0,5" Grid.ColumnSpan="2"/>
        <TextBox Name="PartnerNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,40,0,0" Grid.ColumnSpan="2"/>

        <TextBlock Text="Тип партнера" FontSize="14" Margin="10,80,0,5" Grid.ColumnSpan="2"/>
        <ComboBox Name="PartnerTypeComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,110,0,0" DisplayMemberPath="PartnerTypes" SelectedValuePath="IDPartnerType" Grid.ColumnSpan="2"/>


        <TextBlock Text="Рейтинг" FontSize="14" Margin="10,150,0,5" Grid.ColumnSpan="2"/>
        <TextBox Name="RateTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,180,0,0" Grid.ColumnSpan="2"/>

        <TextBlock Text="Адрес" FontSize="14" Margin="10,220,0,5" Grid.ColumnSpan="2"/>
        <TextBox Name="AddressTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,250,0,0" Grid.ColumnSpan="2"/>

        <TextBlock Text="ФИО Директора" FontSize="14" Margin="10,290,0,5" Grid.ColumnSpan="2"/>
        <TextBox Name="DirectorNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,320,0,0" Grid.ColumnSpan="2"/>

        <TextBlock Text="Телефон" FontSize="14" Margin="10,360,0,5" Grid.ColumnSpan="2"/>
        <TextBox Name="PhoneTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,390,0,0" Grid.ColumnSpan="2"/>

        <TextBlock Text="Email" FontSize="14" Margin="10,430,0,4" Grid.ColumnSpan="2"/>
        <TextBox Name="EmailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,460,0,0" Grid.ColumnSpan="2"/>

        <TextBlock Text="ИНН" FontSize="14" Margin="10,500,0,4" Grid.ColumnSpan="2"/>
        <TextBox Name="InnTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,520,0,0" Grid.ColumnSpan="2"/>

        <Button Name="SaveButton" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,550,0,0" Click="SaveButton_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
